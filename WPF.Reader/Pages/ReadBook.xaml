<Page x:Class="WPF.Reader.Pages.ReadBook"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF.Reader.Pages"
      xmlns:vm="clr-namespace:WPF.Reader.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance Type=vm:InDesignReadBook, d:IsDesignTimeCreatable=True}"
      Title="ReadBook">
    <Page.Resources>
        <vm:Navigator x:Key="navigator" />
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding CurrentBook.Nom}" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" />

        <TextBlock Grid.Row="1" Text="{Binding CurrentBook.Contenu}" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" />


        <Button Grid.Row="2" Content="Retour au details" Margin="266,30,266,30" Command="{Binding ReadCommand}" />

    </Grid>
</Page>

